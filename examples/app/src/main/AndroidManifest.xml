<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.data2viz.viz.sample">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity
                android:name=".LoopActivity"
                android:label="@string/title_activity_loop"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".AnimationActivity"/>
        <activity android:name=".BounceActivity"/>
        <activity android:name=".ChordActivity"/>
        <activity android:name=".ForceActivity"/>
        <activity android:name=".GeoActivity"/>
        <activity android:name=".LineOfSightActivity"/>
        <activity android:name=".SankeyActivity"/>
    </application>

</manifest>